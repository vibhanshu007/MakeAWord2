<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">@dimen/fifty_dp</item>
        <item name="android:layout_height">@dimen/fifty_dp</item>
        <item name="android:layout_marginLeft">@dimen/five</item>
        <item name="android:layout_marginRight">@dimen/five</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextHeding">
        <item name="android:textSize">@dimen/hedadingText_sp</item>
        <item name="android:textColor">#795548</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
